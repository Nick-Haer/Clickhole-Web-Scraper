<body>


    <div id="modal">

        <div id="modalContent">
            <h3 class="modalTitle">Article Saved!</h3>
                    <hr class="divider">
            <p class="modalText">Go to Saved to check out your saved articles</p>
            <button id="closeModal" class="btn btn-primary">Great</button>

        </div>


    </div>

    {{#each articles}}


    <div class="article" data-id={{id}} data-saved={{saved}}>

        <div class="articleHeader">
            <a class="articleLinks" target="blank" href={{url}}>
                <h4 class="articleTitles">{{title}}</h4>
            </a>
            <div class="buttonsDiv">
                {{!-- <button id={{id}} class="btn btn-success articleButtons addButton">Add Note</button>
    <button id={{id}} class="btn btn-danger articleButtons deleteButton">Delete Note</button> --}}
                <button id={{id}} class="btn btn-success articleButtons saveButton">{{#unless saved}}Save Article{{/unless}} {{#if saved}} Saved! {{/if}}</button>
            </div>

        </div>


        <hr class="divider">
        <div>{{summary}}</div>


    </div>
    {{/each}}




</body>

</html>